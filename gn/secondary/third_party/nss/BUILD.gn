# On Linux we always use the system NSS except for SSL.
if (is_linux) {
  pkg_script = "//build/config/linux/pkg-config.py"

  config("nss_linux_config") {
    pkgresult = exec_script(pkg_script, [ "nss" ], "value")
    includes = pkgresult[0]
    cflags = pkgresult[1]
    ldflags = pkgresult[2]
  }
}
